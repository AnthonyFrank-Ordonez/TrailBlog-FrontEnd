{
  "printWidth": 100,
  "singleQuote": true,
  "bracketSameLine": false,
  "htmlWhitespaceSensitivity": "strict",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "parser": "angular"
      }
    },
    {
      "files": "*.component.html",
      "options": {
        "parser": "angular",
        "bracketSameLine": false,
        "htmlWhitespaceSensitivity": "strict"
      }
    }
  ],
  "plugins": ["prettier-plugin-tailwindcss"]
}
